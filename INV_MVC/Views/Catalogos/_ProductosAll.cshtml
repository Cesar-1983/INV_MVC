@model IEnumerable<Entidades.ListarProductos>

<div class="panel panel-default">
    <div class="panel-heading">
        @ViewBag.Heading
    </div>
    <div class="panel-body">
        <div class="row">
           
        </div>
        <table id="grid" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesUnidades)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventario_Min)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Moneda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.precio_in)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.precio_out)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesUnidades)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inventario_Min)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moneda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio_in)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio_out)
                    </td>

                </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<script src="~/Scripts/app/modalform.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#grid').DataTable({
            "lengthMenu": [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, "All"]]
            //"pageLength": 200
        });
    });
</script>