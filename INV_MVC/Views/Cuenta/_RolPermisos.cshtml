@model INV_MVC.Models.Seguridad.RolAddPermisoViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;@ViewBag.ModalHeading</h4>
</div>




@using (Html.BeginForm("RolPermisos", "Cuenta", FormMethod.Post, new { id = "form-01" }))
{
<div class="modal-body">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>Seleccionado</th>
                <th>Accion</th>
                <th>Controlador</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Acciones != null && Model.Acciones.Count > 0)
            {
                @Html.EditorFor(model=> model.Acciones)
            }
        </tbody>
    </table>
</div>
    <div class="modal-footer">
        <div class="text-center">

            @*<button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close fa-fw" aria-hidden="true"></i>&nbsp; Cerrar</button>*@
            <button class="btn" data-dismiss="modal"><i class="fa fa-close fa-fw" aria-hidden="true"></i>&nbsp; Cerrar</button>
            <button class="btn btn-primary" type="submit"><i class="fa fa-check-circle fa-fw" aria-hidden="true"></i>&nbsp; Guardar</button>

        </div>
    </div>
}

